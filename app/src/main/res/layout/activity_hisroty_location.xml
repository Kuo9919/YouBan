<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".path.HisrotyLocationActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/his_bot_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.amap.api.maps.MapView
                android:id="@+id/his_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </com.amap.api.maps.MapView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/his_bot_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/his_tip1"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="路径标识"
                        android:textColor="@color/colorPrimary" />

                <TextView
                        android:id="@+id/his_text_tag"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/his_tip2"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="开始时间"
                        android:textColor="@color/colorPrimary" />

                <TextView
                        android:id="@+id/his_text_time"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/his_tip3"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="路径长度"
                        android:textColor="@color/colorPrimary" />

                <TextView
                        android:id="@+id/his_text_length"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>